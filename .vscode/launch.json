  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome launch",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Script",
      "program": "${file}",
      "args": [
        "index"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Gulp",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "args": [
        "clean"
      ]
    },
  ]
}